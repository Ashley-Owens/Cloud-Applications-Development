<section class="mt-5">
    <div class="container text-center">
        <div class="card home-card bg-dark">
            <div class="card-body p-4">
                <h2 class="p-3 card-title">Profile</h2>
                <section id="displayTable">
                    <table class="table table-hover">
                        <thead>
                        <tr class="d-flex">
                            <th class="col-2 title">Name</th>
                            <th class="col-2 title">Email</th>
                            <th class="col-4 title">ID</th>
                            <th class="col-4 title">Boats</th>
                        </tr>
                        </thead>
                        <tbody id='tableBody'>
                            <tr class="d-flex">
                            <td class="col-2">{{user.name}}</td>
                            <td class="col-2">{{user.email}}</td>
                            <td class="col-6">{{user.id}}</td>
                            <td class="col-6">{{user.boats}}</td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
</section>
